<div class="container shadow mt-3 p-3 w-50">
<h2>Ingrese los datos de su caravana</h2>
  <%= simple_form_for(@caravan) do |f| %>
    <%= f.input :brand, label: "Marca" %>
    <%= f.input :year, label: "Año" %>
    <%= f.input :model, label: "Modelo" %>
    <%= f.input :capacity, label: "Capacidad" %>
    <%= f.input :gas_type, label: "Combustible" %>
    <%= f.input :address, label: "Dirección" %>
    <%= f.input :description, label: "Descripción" %>
    <%= f.input :day_price, label: "Precio por día" %>
    <%= f.input :photo, as: :file, label: "Foto" %>
    <div class="text-center">
      <%= f.submit "Crear", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
