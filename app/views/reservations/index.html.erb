<div class="container shadow mt-3 p-3 w-75">
  <h3 class="text-center">Tus reservas</h3>
  <div class="row">
          <% @reservation.each do |reservation| %>


            <div class="col-12 col-md-6 col-lg-4 mt-4">
              <div class="card">
                <div class="text-center mt-2">
                  <%= cl_image_tag reservation.caravan.photo.key, height: 200, width: 200, crop: :fill %>
                </div>

                <div class="card-body text-center">
                  <h6 class="border shadow border-secondary p-3 w-50 rounded container mt-3 mb-3 <%= reservation.status ? 'text-success' : 'text-danger' %>"><%= reservation.status ? "Aprobada" : "Pendiente" %></h6> <br>
                  <p><%= "Fecha de inicio: #{reservation.start_date}" %></p> <br>
                  <p><%= "Fecha de finalizaciÃ³n: #{reservation.finish_date}"  %></p> <br>
                  <p><%= "Marca: #{reservation.caravan.brand}" %></p> <br>
                  <p><%= "Modelo: #{reservation.caravan.model}"  %></p> <br>
                  <p><%= " #{reservation.caravan.capacity}"  %></p> <br>

                  <div class="d-flex justify-content-center">
                    <%= link_to("Ver detalles", reservation_path(reservation), class:"btn btn-primary ms-2") %>
                  </div>


                </div>
              </div>
            </div>
          <% end %>
    </div>
</div>
